DJANGO_SETTINGS_MODULE={{ settings_dir }}.settings.{{ settings_version }}

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/opt/virtualenvs/{{ project_name }}/bin/celery"

# App instance to use
# comment out this line if you don't use an app
CELERY_APP="{{ settings_dir }}"

# Extra arguments to celerybeat
# disabled on purpose - we do not use django_celery_beat anymore
#CELERYBEAT_OPTS="--scheduler django_celery_beat.schedulers:DatabaseScheduler"

CELERYD_LOG_LEVEL="info"

CELERYD_LOG_FILE="/var/log/celery/beat.log"
CELERYD_PID_FILE="/var/run/celery/beat.pid"
